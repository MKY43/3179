{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 900,
    "height": 500,
    "title": "Major cat 4/5 cyclones in Australia (2006 - 2015)",
    "autosize":"fit",
    "data": {
          "url": "https://raw.githubusercontent.com/MKY43/3179/refs/heads/main/critique/map_data/cyclone_map_data.csv"},
    "projection": {"type": "mercator"},
    "params": [
      
      {
        "name": "cyclone_selection",
        "bind": {
          "input": "select",
          "options": [null, "Marcia", "Yasi", "Larry", "George", "Ingrid", "Monica"],
          "labels": ["Show all", "Marcia ", "Yasi ", "Larry ", "George ", "Ingrid ", "Monica "],
          "name": "Select Cyclone: "
        }
      }
    ],
    "transform": [
      {
        "filter": "cyclone_selection == null || datum.Cyc_Name == cyclone_selection"
      }
    ],
    "layer": [
        {"data": {
          "url": "https://raw.githubusercontent.com/MKY43/3179/refs/heads/main/critique/js/australia_map.json",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "black"}},
        {"data": {
          "url": "https://raw.githubusercontent.com/MKY43/3179/refs/heads/main/critique/js/australia_map.json",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {"type": "geoshape", "fill": "null", "stroke": "black"}},
        {
        "mark": {"type": "circle", "tooltip": {"content": "data"}},
        "encoding": {
          "longitude": {"field": "LON", "type": "quantitative"},
          "latitude": {"field": "LAT", "type": "quantitative"},
          "size": {
            "field": "Radius",
            "type": "quantitative",
            "title": "Cyclone Radius (km)",
            "scale": {"domain": [50, 500]}
          },
          "color": {
            "field": "Wind_Speed",
            "type": "ordinal",
            "title": "Wind Speed",
            "scale": {
              "domain": ["<17 m/s", "17-24 m/s", "25-32 m/s", ">32 m/s"],
              "scheme": "reds"
            }
          }
        }
      }
    ]
  }
