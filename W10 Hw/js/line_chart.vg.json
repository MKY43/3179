{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 300,
    "data": {
      "url": "https://raw.githubusercontent.com/MKY43/3179/refs/heads/main/W10%20Hw/map_data/line_chart.csv"
    },
    "transform": [
      {"filter": {"selection": "cycNameSelector"}},
      {
        "calculate": "toDate(datum.Time, '%d/%m/%Y %H:%M')",
        "as": "Time_Parsed"
      }
    ],
    "selection": {
      "cycNameSelector": {
        "type": "single",
        "fields": ["Cyc_Name"],
        "bind": {"input": "select", "options": ["Marcia", "Yasi", "Larry", "George", "Ingrid", "Monica"], "name": "Cyclone: "},
        "init": {"Cyc_Name": "Marcia"} 
      }
    },
    "mark": "line",
    "encoding": {
      "x": {
        "field": "Time_Parsed",
        "type": "temporal",
        "axis": {
          "title": "Date",
          "format": "%Y-%m-%d"
        },
        "scale": {"domain": {"selection": "cycNameSelector", "field": "Time_Parsed"}}
      },
      "y": {
        "field": "Central_Pressure",
        "type": "quantitative",
        "axis": {"title": "Central Pressure"},
        "scale": {"domain": [900, 1100]}  
      },
      "color": {
        "field": "Cyc_Name",
        "type": "nominal",
        "legend": {"title": "Cyclone"}
      }
    }
  }